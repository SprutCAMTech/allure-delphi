{
	"project_path": "../AllureDelphi.dproj",
	"type": "Delphi",
	"sources": [
		"./*.json",
		"$native_project:sources$"
	],

	"title": "SprutCAM Tech $native_project:name$.dll",
	"description": "Allure integrations for Delphi test frameworks",
	"authors": ["SprutCAM Tech"],
	"owners":  ["SprutCAM Tech"],
	"language": "en-US",
	"version": "1.1",
	"copyright": "$env:package_copyright$",

	"dependencies": [ 
		{ 
			"NativeDependencies": { 
				"is_visible": false
			}
		} 
	],

	"packages": [
		{
			"class": "Nuget",
			"id": "$env:package_prefix$.$native_project:name$.x64",
			"variant_files": {
				"Release_x64": [ {
					"condition": "'$(Platform)' != 'x86'",
					"files": {
						"$project:output_dll$/$native_project:name$.stbuildresult.json": "stbuild",
						"$project:output_dll$/$native_project:name$.dll": "build"
					}
				} ]
			}
		},
		{
			"class": "Nuget",
			"id": "$env:package_prefix$.$native_project:name$.x32",
			"variant_files": {
				"Release_x32": [ {
					"condition": "'$(Platform)' == 'x86'",
					"files": {
						"$project:output_dll$/$native_project:name$.stbuildresult.json": "stbuild",
						"$project:output_dll$/$native_project:name$.dll": "build"
					}
				} ]
			}
		}
	]

}
